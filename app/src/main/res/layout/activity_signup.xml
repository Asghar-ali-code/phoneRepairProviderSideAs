<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".livedata.View.Activity.ActivitySignup">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:background="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:fontFamily="@font/poppins_medium"
        android:text="Signup"
        android:layout_marginTop="@dimen/_14sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Home Services"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Welcome to the best Iphone Repairing App"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toTopOf="@+id/image_View"
        app:layout_constraintEnd_toEndOf="@+id/text_View"
        app:layout_constraintStart_toStartOf="@+id/text_View"
        app:layout_constraintTop_toBottomOf="@+id/text_View" />

    <LinearLayout
        android:id="@+id/image_View"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/bg_whiteborder"
        android:padding="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1">

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/worker"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_24sdp"
        android:fontFamily="@font/poppins_medium"
        android:text="Full Name"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_View" />

            <EditText
                android:id="@+id/edtname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawableStart="@drawable/ic_person"
                android:drawableTint="@color/gray"
                android:textColor="@color/dark_gray"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:background="@null"
                android:hint="johndoe"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/poppins_regular"
                android:padding="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_24sdp"
                android:drawablePadding="@dimen/_3sdp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/edtname"
                android:text="Email Address"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_10sdp"
                />
            <EditText
                android:id="@+id/edtemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:drawableTint="@color/gray"
                android:textColor="@color/dark_gray"
                android:drawableStart="@drawable/ic_mail"
                android:inputType="textEmailAddress"
                android:hint="johndoe@gmail.com"
                android:textSize="@dimen/_14ssp"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_24sdp"
                android:drawablePadding="@dimen/_3sdp"
                />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/edtemail"
                android:text="Password"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_10sdp"
                />

            <EditText
                android:id="@+id/edtpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textView4"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:drawableTint="@color/gray"
                android:textColor="@color/dark_gray"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawableStart="@drawable/ic_lock"
                android:hint="password"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textPassword"
                android:padding="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_24sdp"
                android:drawablePadding="@dimen/_3sdp"/>

        <ImageView
            android:id="@+id/iv_eye"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_eye_24"
            app:layout_constraintBottom_toBottomOf="@+id/edtpass"
            app:layout_constraintEnd_toEndOf="@+id/edtpass"
            app:layout_constraintTop_toTopOf="@+id/edtpass" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnsignin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/edtpass"
                android:background="@drawable/bg_btn"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/_25sdp"
                />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:textSize="@dimen/_12ssp"
        android:text="Already have a account?"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="@+id/btnsignin"
        app:layout_constraintStart_toStartOf="@+id/btnsignin"
        app:layout_constraintTop_toBottomOf="@+id/btnsignin" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/_12ssp"
        android:gravity="center"
        android:text="Login"
        android:padding="@dimen/_4sdp"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>