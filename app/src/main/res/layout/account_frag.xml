<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                android:background="@drawable/background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jennifer Paul"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/poppins_bold"
                android:layout_margin="@dimen/_25sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tvemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="provider@gmail.com"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/tvname"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_12ssp"
                />

            <LinearLayout
                android:id="@+id/image_View"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                app:layout_constraintTop_toBottomOf="@+id/tvemail"
                android:background="@drawable/bg_whiteborder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_30sdp"
                >
                <ImageView
                    android:id="@+id/iv_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/man"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/image_View"
                app:cardElevation="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_margin="@dimen/_18sdp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/innerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="@dimen/_18sdp"
                        android:id="@+id/profile"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/avatar1"
                        app:layout_constraintTop_toTopOf="@+id/innerView"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/_8sdp"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/_20sdp"
                        android:id="@+id/profile1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Profile"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintTop_toTopOf="@id/innerView"
                        app:layout_constraintStart_toEndOf="@+id/profile"
                        android:layout_marginStart="@dimen/_35sdp"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        />
                    <ImageView
                        android:id="@+id/clipboard"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/clipboard1"
                        app:layout_constraintTop_toBottomOf="@+id/profile"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_18sdp"/>
                    <TextView
                        android:id="@+id/bookings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="My Bookings"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toEndOf="@id/clipboard"
                        app:layout_constraintTop_toBottomOf="@id/profile1"
                        android:layout_marginStart="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        />
                    <ImageView
                        android:id="@+id/bell"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/bell1"
                        app:layout_constraintTop_toBottomOf="@+id/clipboard"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_18sdp"/>
                    <TextView
                        android:id="@+id/notifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Notifications"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toEndOf="@id/bell"
                        app:layout_constraintTop_toBottomOf="@id/bookings"
                        android:layout_marginStart="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"/>

                    <ImageView
                        android:id="@+id/chatting"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/chatting1"
                        app:layout_constraintTop_toBottomOf="@+id/bell"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        app:layout_constraintBottom_toBottomOf="@id/innerView"
                        android:layout_marginBottom="@dimen/_18sdp"/>
                    <TextView
                        android:id="@+id/messages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Messages"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toEndOf="@id/chatting"
                        app:layout_constraintTop_toBottomOf="@id/notifications"
                        app:layout_constraintEnd_toEndOf="@id/innerView"
                        android:layout_marginStart="@dimen/_35sdp"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:layout_constraintBottom_toBottomOf="@id/innerView"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cardView"
                app:cardElevation="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_margin="@dimen/_18sdp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/innerView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="@dimen/_18sdp"
                        android:id="@+id/setting"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/settings1"
                        app:layout_constraintTop_toTopOf="@+id/innerView1"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/_8sdp"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/_20sdp"
                        android:id="@+id/settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Settings"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintTop_toTopOf="@id/innerView1"
                        app:layout_constraintStart_toEndOf="@+id/setting"
                        android:layout_marginStart="@dimen/_35sdp"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        />
                    <ImageView
                        android:id="@+id/language"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/translate1"
                        app:layout_constraintTop_toBottomOf="@+id/setting"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_18sdp"/>
                    <TextView
                        android:id="@+id/translate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Language"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toEndOf="@id/language"
                        app:layout_constraintTop_toBottomOf="@id/settings"
                        android:layout_marginStart="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        />
                    <ImageView
                        android:id="@+id/theme"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/theme1"
                        app:layout_constraintTop_toBottomOf="@+id/language"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        app:layout_constraintBottom_toBottomOf="@+id/innerView1"
                        android:layout_marginBottom="@dimen/_18sdp"/>
                    <TextView
                        android:id="@+id/themes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Theme"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toEndOf="@id/theme"
                        app:layout_constraintTop_toBottomOf="@id/translate"
                        android:layout_marginStart="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardView1"
                app:cardElevation="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_margin="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_30sdp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/innerView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/FAQ"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/help"
                        app:layout_constraintTop_toTopOf="@+id/innerView3"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        app:tint="@color/blue" />
                    <TextView
                        android:id="@+id/HFAQ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Help &amp; FAQ"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toEndOf="@id/FAQ"
                        app:layout_constraintTop_toTopOf="@id/innerView3"
                        android:layout_marginStart="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        />
                    <ImageView
                        android:id="@+id/logout"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/logout"
                        app:layout_constraintTop_toBottomOf="@+id/FAQ"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_marginBottom="@dimen/_18sdp"
                        app:layout_constraintBottom_toBottomOf="@+id/innerView3"
                        app:tint="@color/blue" />
                    <TextView
                        android:id="@+id/Logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Logout"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toEndOf="@id/logout"
                        app:layout_constraintTop_toBottomOf="@id/HFAQ"
                        android:layout_marginStart="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>